<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/admin_back"
    tools:context=".activity.admin.thongke.ThongKeActivity">

    <TextView
        android:id="@+id/textThemSP"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginStart="154dp"
        android:layout_marginTop="16dp"
        android:text="THỐNG KÊ"
        android:textSize="20dp"
        android:textColor="#EA2F2F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="-116dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/rounded_button_shipper"
            app:layout_constraintTop_toTopOf="@+id/textThemSP">

            <ImageView
                android:id="@+id/imageLogoQLThongKe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/analytics"></ImageView>

            <Button
                android:id="@+id/btThongKeSanPhamBanDuoc"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_button_thongke"
                android:text="Thông kê sản phẩm bán được"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_button_brand"
            app:layout_constraintStart_toStartOf="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2">

            <ImageView
                android:id="@+id/imageLogoQLThongKeDoanhThu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/business"></ImageView>

            <Button
                android:id="@+id/btThongKeDoanhThu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"

                android:background="@drawable/rounded_button_order"
                android:text="Thông kê doanh thu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>